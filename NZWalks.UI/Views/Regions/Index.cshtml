@model IEnumerable<NZWalks.UI.Models.DTO.RegionDTO>

<h1>Regions</h1>
<div class="d-flex justify-content-end mt-3">
    <a class="btn btn-secondary" asp-asp-controller="Regions" asp-action="Add">Add Region</a>
</div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Code</th>
            <th>Name</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var region in Model)
        {
            <tr>
                <td>@region.ID</td>
                <td>@region.Code</td>
                <td>@region.Name</td>
                <td><a class="btn btn-primary" asp-controller="Regions" asp-action="Edit" asp-route-id="@region.ID">Edit</a></td>
            </tr>
        }
    </tbody>
</table>